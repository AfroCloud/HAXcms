{
  "configure": [
    {
      "property": "title",
      "title": "Title",
      "description": "Title of the site",
      "inputMethod": "textfield",
      "required": true,
      "icon": "editor:title"
    },
    {
      "property": "domain",
      "title": "Domain",
      "description": "Domain of this website",
      "inputMethod": "textfield",
      "required": false,
      "icon": "icons:open-in-browser"
    },
    {
      "property": "description",
      "title": "Description",
      "description": "Simple description of the site",
      "inputMethod": "textfield",
      "required": false,
      "icon": "editor:short-text"
    },
    {
      "property": "image",
      "title": "Banner",
      "description": "Image for the site",
      "inputMethod": "haxupload",
      "required": false,
      "icon": "image:image"
    },
    {
      "property": "cssVariable",
      "title": "Color",
      "description": "A base accent color for the site",
      "inputMethod": "colorpicker",
      "required": true,
      "icon": "editor:format-color-fill"
    },
    {
      "property": "theme",
      "title": "Theme",
      "description": "Page theme",
      "inputMethod": "select",
      "required": false,
      "icon": "editor:format-paint",
      "options": {}
    },
    {
      "property": "icon",
      "title": "Icon",
      "description": "Icon to represent the site",
      "inputMethod": "iconpicker",
      "required": false,
      "icon": "icons:send"
    }
  ],
  "advanced": [
    {
      "property": "fields",
      "title": "Custom Fields",
      "description": "Store relational data about fields",
      "required": false,
      "icon": "icons:group-work",
      "inputMethod": "array",
      "properties": [
        {
          "property": "formgroup",
          "title": "Form group",
          "description": "Which tab will users input values",
          "inputMethod": "select",
          "required": true,
          "options": {
            "configure": "Configure",
            "advanced": "Advanced"
          },
          "icon": "link"
        },
        {
          "property": "inputMethod",
          "title": "Input method",
          "description": "How users can enter data for this field",
          "inputMethod": "select",
          "options": {
            "textfield": "Textfield",
            "number": "Number",
            "boolean": "Checkbox",
            "haxupload": "File upload",
            "colorpicker": "Color picker",
            "iconpicker": "Icon picker",
            "code-editor": "Code editor",
            "alt": "Alt text",
            "datepicker": "Date picker",
            "textarea": "Text area",
            "flipboolean": "Checkbox (inverted)",
            "select": "Select list",
            "array": "Array"
          },
          "icon": "link"
        },
        {
          "property": "property",
          "title": "Machine name",
          "description": "Field machine name for storage",
          "inputMethod": "textfield",
          "required": true
        },
        {
          "property": "title",
          "title": "Name",
          "description": "Readable name of the field",
          "inputMethod": "textfield",
          "required": true
        },
        {
          "property": "description",
          "title": "Description",
          "description": "additional details about the field data",
          "inputMethod": "textfield",
          "required": false
        },
        {
          "property": "required",
          "title": "Required",
          "description": "Is this field required",
          "inputMethod": "boolean",
          "required": false
        },
        {
          "property": "icon",
          "title": "Icon",
          "description": "Optional icon to represent this field",
          "inputMethod": "iconpicker",
          "required": false
        }
      ]
    },
    {
      "property": "settings",
      "inputMethod": "tabs",
      "properties": [
        {
          "property": "author",
          "title": "Author / Ownership",
          "description": "Author details",
          "inputMethod": "textfield",
          "icon": "social:person",
          "properties": [
            {
              "property": "settings.author.license",
              "title": "License",
              "description": "The source url for the element this is citing.",
              "inputMethod": "select",
              "options": {
                "by": "Attribution",
                "by-nc": "Attribution non-commercial",
                "by-nc-nd": "Attribution Non-commercial No derivatives",
                "by-nc-sa": "Attribution non-commercial share a like",
                "by-nd": "Attribution No derivatives",
                "by-sa": "Attribution Share a like"
              },
              "icon": "link"
            },
            {
              "property": "author.image",
              "title": "Image",
              "description": "Photo",
              "inputMethod": "haxupload"
            },
            {
              "property": "author.name",
              "title": "Name",
              "description": "Name",
              "inputMethod": "textfield"
            },
            {
              "property": "author.socialLink",
              "title": "Social media link",
              "description": "A primary social space / point of contact",
              "inputMethod": "textfield"
            }
          ]
        },
        {
          "property": "seo",
          "title": "SEO / Path",
          "description": "Search engine and detailed internal path handling",
          "icon": "social:person",
          "properties": [
            {
              "property": "pathauto",
              "title": "Pathauto",
              "description": "Automatically maintain element paths",
              "inputMethod": "boolean",
              "icon": "icons:link"
            },
            {
              "property": "seo.offline",
              "title": "Offline",
              "description": "If site should be offline capable or not",
              "inputMethod": "boolean",
              "icon": "icons:link"
            }
          ]
        },
        {
          "property": "publishing",
          "title": "Publishing",
          "description": "Store relational data about fields",
          "properties": [
            {
              "property": "git.cdn",
              "title": "CDN",
              "description": "CDN to use for published assets",
              "inputMethod": "select",
              "required": true,
              "options": {
                "https://webcomponents.psu.edu/cdn/": "Penn State CDN",
                "https://cdn.waxam.io/": "Waxam CDN",
                "build/": "Local (no CDN)"
              },
              "icon": "link"
            },
            {
              "property": "git.branch",
              "title": "Branch",
              "description": "Branch to publish on (gh-pages / master are common)",
              "inputMethod": "textfield",
              "required": true
            },
            {
              "property": "git.url",
              "title": "Git url",
              "description": "location of the git repository to sync up to",
              "inputMethod": "textfield",
              "required": true
            },
            {
              "property": "git.vendor",
              "title": "Vendor",
              "description": "Vendor to publish to (github only supported currently)",
              "inputMethod": "textfield",
              "required": true
            }
          ]
        }
      ]
    }
  ]
}